//questao 2
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

void binario(int num)
{
  if (num/2==0)
  {
    printf ("binario: %d",num%2); 
  }
  else
  {
   binario(num/2);
   printf ("%d",num%2);
  }
}
  
 int main()
{
  binario(27);
  printf ("\n");
  
}
