//estudando estruturas

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main ()
{
	struct espec_carro //especificacao do carro
	{
		char nome [20];
		int modelo;
		int ano;		
	};
	
	 struct espec_carro carro;
	 
	 printf ("informe nome do carro: ");
	 fgets (carro.nome,20,stdin);
	 printf ("informe o modelo: \n");
	 scanf ("%d",&carro.modelo);
	 printf ("qual ano do veiculo: \n");
	 scanf ("%d", &carro.ano);
	 
	 printf ("\t*-*informacoes do carro fornecido*-*\n\n");
	 
	 printf ("nome do veiculo fornecido: %s\n",carro.nome);
	 printf ("modelo do veiculo %s fornecidos: %d\n",carro.nome,carro.modelo);
	 printf ("ano do veiculo %s informado: %d\n",carro.nome,carro.ano);
	 
}

