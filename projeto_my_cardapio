#include <stdio.h>

int main ()
{
  int opcao,dia;
    
       printf (" \n\t\t\t^^^^^ CARDAPIO DA SEMANA ^^^^^\n\n");
       printf ("segunda-feira: [1] \n");
       printf ("terca-feira:   [2]\n");
       printf ("quarta-feira:  [3]\n");
       printf ("quinta-feira:  [4]\n");
       printf ("sexta-feira:   [5]\n");
       printf ("sabado:        [6]\n\n");
   
       printf ("digite o dia da semana como infomado acima:  ");
       scanf ("%d",&dia);
    
   switch (dia)
   {
       case 1:
           printf ("\n\t-----Opcoes de segunda-feira-----\n");
           printf ("opcao [1]:\n");
           printf ("->arroz\n->feijao \n->salada \n->carne de boi \n->suco 200ml\n");
         break;  

       default:
          printf ("nada selecionado\n");       
   }       
            
   
}
